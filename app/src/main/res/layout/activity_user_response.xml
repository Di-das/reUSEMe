<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo11"
    tools:context=".UserResponse">

    <TextView
        android:id="@+id/reuse_text"
        android:layout_width="0dp"
        android:layout_height="147dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/reuse_text"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:visibility="visible"
        app:fontFamily="@font/chewy"
        app:layout_constraintBottom_toTopOf="@+id/reuse_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reuse_button"
        android:layout_width="172dp"
        android:layout_height="75dp"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:background="@drawable/logo11"
        android:onClick="chooseDeviceType"
        android:text="@string/reuse_button"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recycle_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reuse_text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/recycle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/recycle_text"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:visibility="visible"
        app:fontFamily="@font/chewy"
        app:layout_constraintBottom_toTopOf="@+id/recycle_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reuse_button" />

    <Button
        android:id="@+id/recycle_button"
        android:layout_width="198dp"
        android:layout_height="72dp"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:background="@drawable/logo11"
        android:onClick="openForm"
        android:text="@string/recycle_button"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recycle_text"
        app:layout_constraintStart_toStartOf="@+id/recycle_text"
        app:layout_constraintTop_toBottomOf="@+id/recycle_text"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>